{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "es2021",
    ],
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "declaration": true,
  },
  "include": [
    "src/**.ts",
    "src/types.d.ts"
  ]
}